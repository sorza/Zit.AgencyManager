@inherits LayoutComponentBase
@inject TitleService TitleService

<MudThemeProvider/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Surface" Fixed="true" Elevation="2">        
        <MudImage Src="images/Logo.png" Class="mr-5"></MudImage>
        
        <MudDivider Vertical="true" Class="mr-5 ml-5" FlexItem="true" />
        <MudText Typo="Typo.h6">@TitleService.CurrentTitle</MudText>
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent class="main-content pa-10">
        @Body
    </MudMainContent>

</MudLayout>

@code {
    private MudTheme currentTheme = new MudTheme()
    {
        Palette = ManagerPalette.CreatePalette
    };
}

