@page "/GerenciarAgencia/{AgenciaId}"
<MudGrid>
    <MudItem xs="3">
        <MudCard>
            <MudCardMedia Image=""></MudCardMedia>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Caixas</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardActions>
                <MudButton Color="Color.Primary"
                           Variant="Variant.Outlined"
                           Class="mr-2"
                           Href=@($"/Caixas/{AgenciaId}")>Conferir</MudButton>

                <MudButton Color="Color.Warning"
                           Variant="Variant.Outlined"
                           Href=@($"/BaixarCaixas/{AgenciaId}")>Baixar</MudButton>

            </MudCardActions>
        </MudCard>
    </MudItem>  

    <MudItem xs="3">
        <MudCard>
            <MudCardMedia Image="images/cardColaborador.png"></MudCardMedia>
            
            <MudCardActions>
                <MudButton Color="Color.Primary"
                           Variant="Variant.Outlined"
                           Class="mr-2"
                           Style="width: 100%"
                           Href=@($"/Colaboradores/{AgenciaId}")>
                    <MudIcon Icon="@Icons.Material.Filled.People" Class="mr-2" />
                    Colaboradores
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="3">
        <MudCard>
            <MudCardMedia Image="images/cardCargos.png"></MudCardMedia>
            
            <MudCardActions>
                <MudButton Color="Color.Primary"
                           Variant="Variant.Outlined"
                           Class="mr-2"
                           Style="width: 100%"
                           Href=@($"/Cargos/{AgenciaId}")>Cargos</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="3">
        <MudCard>
            <MudCardMedia Image=""></MudCardMedia>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Contratos</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardActions>
                <MudButton Color="Color.Primary"
                           Variant="Variant.Outlined"
                           Class="mr-2"
                           Href=@($"/Contratos/{AgenciaId}")>Exibir</MudButton>

                <MudButton Color="Color.Warning"
                           Variant="Variant.Outlined"
                           Href=@($"/CadastrarContrato/{AgenciaId}")>Novo Contrato</MudButton>

            </MudCardActions>
        </MudCard>
    </MudItem>

</MudGrid>


@code {
    [Parameter]
    public string? AgenciaId { get; set; }
}
