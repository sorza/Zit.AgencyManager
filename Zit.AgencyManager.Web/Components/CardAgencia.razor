<MudCard>
    <MudCardMedia Image="@Imagem"></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Agencia!.Descricao</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Agencia.Endereco.Logradouro, @Agencia.Endereco.Numero <br />  @Agencia.Endereco.Bairro <br /> @Agencia.Endereco.Complemento <br /> @Agencia.Endereco.Cidade / @Agencia.Endereco.Uf </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning"
                   Variant="Variant.Outlined"
                   Href=@($"/EditarAgencia/{Agencia!.Id}")>Editar Dados</MudButton> 
                   
        <MudButton Color="Color.Primary"
                   Variant="Variant.Outlined"
                   Href=@($"/GerenciarAgencia/{Agencia!.Id}")>Gerenciar</MudButton>
    </MudCardActions>    
</MudCard>

@code {
    [Parameter]
    public AgenciaResponse? Agencia { get; set; }
    public string? Imagem { get; set; }

    protected override void OnInitialized()
    {
        Imagem = Agencia!.Foto is null ? "images/cardAgencia.jpg" : $"https://localhost:7006/{Agencia!.Foto}";
    }

}
