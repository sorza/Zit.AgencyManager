@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject TitleService TitleService
@inject NavigationManager NavManager


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @if (ShouldShowNavBar)
    {
        <MudAppBar Class="nav-bar" Fixed="true" Elevation="2">
            <MudGrid>
                <MudItem>
                    <MudImage Src="images/Logo.png" Style="width:180px; height:40px;" Class="mr-4 mt-3"></MudImage>
                </MudItem>
                <MudDivider Vertical="true" Class="mr-5 ml-2" FlexItem="true" />
                <MudItem>
                    <MudText Class="mt-4" Typo="Typo.h6">@TitleService.CurrentTitle</MudText>
                </MudItem>
            </MudGrid>

            <AuthorizeView>
                <Authorized>
                    <MudText Class="mr-3">@context.User.Identity!.Name</MudText>
                    <MudAvatar Color="Color.Default">                        
                        <MudIcon Icon="@Icons.Material.Filled.Person"></MudIcon>
                    </MudAvatar>
                    <MudButton Class="ml-4" Href="logout"
                               Variant="Variant.Outlined"
                               Color="Color.Inherit">Logout</MudButton>
                    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
                        <NavMenu></NavMenu>
                    </MudDrawer>
                </Authorized>                
            </AuthorizeView>

        </MudAppBar>
    }   
    <MudMainContent class="main-content pa-10">
        @Body
    </MudMainContent>

</MudLayout>

@code {
    private MudTheme currentTheme = new MudTheme()
    {
        Palette = ManagerPalette.CreatePalette
    };
   
    private bool ShouldShowNavBar => !NavManager.Uri.Contains("/login");
    
}

