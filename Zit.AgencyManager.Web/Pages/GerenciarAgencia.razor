@page "/GerenciarAgencia/{AgenciaId}"

@inject TitleService TitleService

<PageTitle>Minha Agencia</PageTitle>

<MudGrid>
    <MudItem xs="3">
        <MudCard>
            <MudCardMedia Image="images/cardContrato.png"></MudCardMedia>
            
            <MudCardActions>
                <MudButton Color="Color.Primary"
                           Variant="Variant.Outlined"
                           Class="mr-2"
                           Style="width: 100%"
                           Href=@($"/Contratos/{AgenciaId}")>
                    <MudIcon Icon="@Icons.Material.Filled.Assignment" Class="mr-2" />
                 Contratos
                </MudButton>

            </MudCardActions>
        </MudCard>
    </MudItem>  

    <MudItem xs="3">
        <MudCard>
            <MudCardMedia Image="images/cardColaborador.png"></MudCardMedia>
            
            <MudCardActions>
                <MudButton Color="Color.Primary"
                           Variant="Variant.Outlined"
                           Class="mr-2"
                           Style="width: 100%"
                           Href=@($"/Colaboradores/{AgenciaId}")>
                    <MudIcon Icon="@Icons.Material.Filled.People" Class="mr-2" />
                    Colaboradores
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="3">
        <MudCard>
            <MudCardMedia Image="images/cardCargos.png"></MudCardMedia>
            
            <MudCardActions>
                <MudButton Color="Color.Primary"
                           Variant="Variant.Outlined"
                           Class="mr-2"
                           Style="width: 100%"
                           Href=@($"/Cargos/{AgenciaId}")>Cargos</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

</MudGrid>


@code {
    [Parameter]
    public string? AgenciaId { get; set; }

    protected override void OnInitialized()
    {
        TitleService.SetTitle("Gerenciar Agência");
    }
}
